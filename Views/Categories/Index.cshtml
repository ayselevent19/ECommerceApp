@model List<Category>

<!DOCTYPE html>
<html>
<head>
    <title>Category List</title>
</head>
<body>
    <h2>Categories</h2>
    <ul>
        @foreach (var category in Model)
        {
            <li>
                <a asp-controller="Products" asp-action="ListByCategory" asp-route-categoryId="@category.Id">@category.Name</a>
            </li>
        }
    </ul>
</body>
</html>
